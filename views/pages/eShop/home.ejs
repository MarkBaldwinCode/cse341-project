<!DOCTYPE html>
<html>

<head>
  <% include ../../includes/header.ejs %>
</head>

<body>
  <% include ../../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= pageTitle %>
        </h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <button><a href="/eShop/add-products">Admin Add Products</a></button>
        <button><a href="/eShop/cart">Your Shopping Cart</a></button>
        <br>
        <h1>Our Current Products</h1>
      </div>

      <div class="container">
        <form action="/proveActivities/prove03" method='GET'>
          <label for="">Search Product List</label>
          <input type="text" name="searchList" id="" value='<%=userSearchList %>'>
          <button type="submit">Find an Item</button>
        </form>
      </div>

      <div class="grid">
        <ul>
          <% for ( item of items ) { %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title">
                  <%= item.title %>
                </h1>
              </header>
              <div class="card__image">
                <img src="<%= item.imageUrl%>" alt="A Book">
              </div>
              <div class="card__content">
                <h2 class="product__price">
                  <%= item.price %>
                </h2>
                <p class="product__description">
                  <%= item.description %>
                </p>
              </div>
              <div class="card__actions">
                <form action="/eShop/<%= item._id %>" method="get">
                  <button class="btn" type="submit">Details</button>
                  <input type="hidden" name="productId" value="<%= item._id %>">
              </form>
                <% include ../../includes/add-to-cart.ejs %>
              </div>
            </article>
            <% } %>
        </ul>
      </div>

    </div>


</body>

</html>