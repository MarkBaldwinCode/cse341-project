<!DOCTYPE html>
<html>

<head>
  <% include ../../includes/header.ejs %>
</head>

<body>
  <% include ../../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Prove Activity 03</p>
      </div>
    </div>
    <div class="container">
      <form action="/proveActivities/prove03" method='GET'>
        <label for="">Search Product List</label>
        <input type="text" name="searchList" id="" value='<%=userSearchList %>'>
        <button type="submit">Find an Item</button>
      </form>
    </div>

    <div class="grid">
      <ul>
        <% for ( item of items ) { %>
          <article class="card product-item">
            <header class="card__header">
              <h1 class="product__title">
                <%= item.name %>
              </h1>
            </header>
            <div class="card__image">
              <img src="<%= item.img%>" alt="A Book">
            </div>
            <div class="card__content">
              <h2 class="product__price">
                <%= item.price %>
              </h2>
              <p class="product__description">
                <%= item.description %>
              </p>
            </div>
            <div class="card__actions">
              <button class="btn">Add to Cart</button>
            </div>
          </article>
          <% } %>
      </ul>
    </div>

</body>

</html>